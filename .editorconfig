# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

# "Frontend"
[*.{css,js,sass,scss}]
indent_size = 4
quote_type = single

# "Backend"
[*.{html,php}]
indent_size = 4
# Config files
[*.{yml,rb}]
indent_size = 2
