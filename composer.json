{
	"name": "sapphire/sapphire-site-manager",
	"type": "wordpress-plugin",
	"authors": [
		{
			"name": "bobbylee.dev",
			"email": "bobby@bobbylee.dev"
		}
	],
	"require": {
		"php": "^8.0"
	},
	"autoload": {
		"psr-4": {
			"SapphireSiteManager\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"SapphireSiteManager\\Tests\\": "./tests"
		}
	},
	"require-dev": {
		"phpcompatibility/phpcompatibility-wp": "*",
		"wp-coding-standards/wpcs": "^3.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"dingo-d/wp-pest": "^1.6"
	},
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"composer/installers": true,
			"pestphp/pest-plugin": true
		}
	},
	"scripts": {
		"lint": "phpcs --standard=phpcs.xml",
		"fix": "phpcbf --standard=phpcs.xml",
		"test:unit": "@php ./vendor/bin/pest --group=unit",
		"test:integration": "@php ./vendor/bin/pest --group=integration",
		"test:integration": "./vendor/bin/pest --group=unit && ./vendor/bin/pest --group=integration"
	}
}
